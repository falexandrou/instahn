{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true,
            "arrowFunctions": true,
            "forOf": true
        }
    },
    "globals": {
        "window": true,
        "document": true,
        "fetch": true,
        "global": true,
        "Request": true,
        "Response": true,
        "Symbol": true,
        "require": true,
        "navigator": true
    }
}